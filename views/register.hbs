    <!-- Form -->
    <section id="addProject">
      <div class="container mt-5">
        <div class="row my-5">
          <div class="col text-center mt-3">
            <h2 class="fw-bold">REGISTER YOUR ACCOUNT</h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-6">

            <form class="fw-bold" action="/register" method="POST">
                <div class="mb-3">
                    <label for="input-blog-title" class="form-label">Name</label>
                    <input class="form-control" id="input-blog-title" name="name"/>
                  </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>

          </div>
        </div>
      </div>
    </section>
    <!-- Akhir Form -->
    <section id="contents"></section>

