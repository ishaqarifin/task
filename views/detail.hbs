<html>
  <head>
    <title>blo-detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <!-- <link rel="stylesheet" href="style.css" /> -->
  </head>
  <body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/blog">
          <img src="public/assets/logo.png" alt="" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4 fw-bolder">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/blog">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/form-blog">Add Project</a>
            </li>
          </ul>
          <div class="btn btn-outline-dark bg-warning">
            <a href="/contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Blog -->
    <div class="blog-detail mt-5">
      <form class="blog-detail-container">
        <form class="fw-normal" action="/blog" method="POST"></form>
        <div class="row">
          <h1>{{blog.name}}</h1>
          <div class="col-7 mb-5">
            <br>
            <div class="card">
              <img src="public/assets/blog-img-detail.png" alt="detail" />
            </div>
          </div>
          <div class="col-5">
            <div class="row">
              <div class="col-12 mt-5">
                <h3>duration</h3>
                <span><i class="bi bi-calendar"></i> : {{blog.start_date}} - {{blog.end_date}}</span>
                <br>
                <span class="mb-5"><i class="bi bi-clock"></i> : {{blog.diffMonth}} bulan - {{blog.dm}} hari</span>
              </div>
              <div class="col mt-5">
                <h3 class="mb-3">Technologies</h3>
                <span><img src="/{{blog.technologies}}" style="width: 20px; height: 20px" alt=""></span>
              </div>
            </div>
          </div>
        </div>
        <p>
          {{blog.description}}
        </p>
        </form>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
