<html lang="en">
  <head>
    <title>Form Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <!-- <link rel="stylesheet" href="style.css" /> -->
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/blog">
          <img src="public/assets/logo.png" alt="" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4 fw-bolder">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/blog">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/form-blog">Add Project</a>
            </li>
          </ul>
          <div class="btn btn-outline-dark bg-warning">
            <a href="/contact" class="fw-bold">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- akhir navbar -->

    <!-- Form -->
    <section id="addProject">
      <div class="container">
        <div class="row my-5">
          <div class="col text-center mt-3">
            <h2 class="fw-bold">ADD MY PROJECT</h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-6">

            <form class="fw-bold" action="/blog" method="POST">
              <div class="mb-3">
                <label for="input-blog-title" class="form-label">Title</label>
                <input class="form-control" id="input-blog-title" name="title"/>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="start-date" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="start-date" name="start" aria-describedby="start" />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="end-date" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="end-date" name="end" aria-describedby="end" />
                  </div>
                </div> 
              </div>
              <div class="mb-3">
                <label for="input-blog-content" class="form-label">Content</label>
                <textarea class="form-control" id="input-blog-content" name="content" rows="3"></textarea>
              </div>
              <div class="row mb-4 fw-normal">
                <label for="start" class="form-label fw-bold">Technologies</label>
                <div class="col-md-6">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value='/public/assets/node.png' id="cb" name="checkbox1"/>
                    <label class="form-check-label"> Node JS </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="/public/assets/react.png" id="cb" name="checkbox2"/>
                    {{!-- <img src='/public/assets/react.png' class='img-thumbnail' alt=''> --}}
                    <label class="form-check-label"> React JS </label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="/public/assets/next.png" id="cb" name="checkbox3"/>
                    {{!-- <img src="assets/next.png" class="img-thumbnail" alt=""> --}}
                    <label class="form-check-label"> Next JS </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="/public/assets/js5.jpg" id="cb" name="checkbox4"/>
                    {{!-- <img src="assets/js5.jpg" class="img-thumbnail" alt=""> --}}
                    <label class="form-check-label"> JavaScript </label>
                  </div>
                </div>
              </div>
              <div class="mb-4">
                <label for="formFile" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="input-blog-image" name="image"/>
              </div>
              <button class="btn btn-primary mb-5">Post Blog</button>
            </form>

          </div>
        </div>
      </div>
    </section>
    <!-- Akhir Form -->
    <section id="contents"></section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="form-blog.js"></script>
  </body>
</html>